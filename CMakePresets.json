{
  "version": 4,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 26,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "linux-debug",
      "displayName": "Linux Debug",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/obj/Debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "linux-release",
      "displayName": "Linux Release",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/obj/Release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "windows-ucrt",
      "displayName": "Windows MSYS2 UCRT (Multi-config)",
      "generator": "Ninja Multi-Config",
      "binaryDir": "${sourceDir}/obj/windows-ucrt",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "linux-debug",
      "configurePreset": "linux-debug"
    },
    {
      "name": "linux-release",
      "configurePreset": "linux-release"
    },
    {
      "name": "windows-debug",
      "configurePreset": "windows-ucrt",
      "configuration": "Debug"
    },
    {
      "name": "windows-release",
      "configurePreset": "windows-ucrt",
      "configuration": "Release"
    }
  ],
  "testPresets": [
    {
      "name": "linux",
      "configurePreset": "linux-release"
    }
  ]
}
