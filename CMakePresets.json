{
  "$schema": "https://raw.githubusercontent.com/Kitware/CMake/master/Help/manual/cmake-presets.7.json",
  "version": 8,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 24,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "linux-debug",
      "displayName": "Linux Debug",
      "generator": "Ninja",
      "binaryDir": "build/linux-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "linux-release",
      "displayName": "Linux Release",
      "generator": "Ninja",
      "binaryDir": "build/linux-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "windows-ucrt-debug",
      "displayName": "Windows UCRT Debug",
      "generator": "Ninja Multi-Config",
      "binaryDir": "build/windows-ucrt",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "linux-debug",
      "configurePreset": "linux-debug",
      "configuration": "Debug"
    },
    {
      "name": "linux-release",
      "configurePreset": "linux-release",
      "configuration": "Release"
    },
    {
      "name": "windows-ucrt-debug",
      "configurePreset": "windows-ucrt-debug",
      "configuration": "Debug"
    },
    {
      "name": "windows-ucrt-release",
      "configurePreset": "windows-ucrt-debug",
      "configuration": "Release"
    }
  ],
  "testPresets": []
}
